{
  "manifest_version": 3,
  "name": "Mini Stopwatch",
  "version": "1.1",
  "description": "A minimal, draggable popup stopwatch",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}


